@page
@model OnlinePharmacy.Pages.FeedbackViews.IndexModel

@{
    ViewData["Title"] = "Feedback";
}

<p>
    <a asp-page="Create">Click here to give feedback</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback[0].Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Feedback) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
